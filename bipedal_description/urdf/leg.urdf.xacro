<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="leg"
                 params="prefix parent side damping friction serial_port mx_ids offsets is_direct reductions">

        <xacro:include filename="$(find bipedal_description)/ros2_control/leg.ros2_control.xacro"/>

        <xacro:if value="${side == 'left'}">
            <xacro:property name="reflect" value="-1"/>
            <xacro:property name="leg_y" value="0.044"/>
        </xacro:if>
        <xacro:if value="${side == 'right'}">
            <xacro:property name="reflect" value="1"/>
            <xacro:property name="leg_y" value="0.036"/>
        </xacro:if>

        <link name="${prefix}_leg">
            <inertial>
                <origin xyz="-0.016 ${leg_y} 0.0" rpy="${1.57*reflect} 1.57 0.0"/>
                <mass value="0.053"/>
                <inertia ixx="3.308e-4" ixy="9.972e-8" ixz="-2.037e-9" iyy="4.650e-5" iyz="2.113e-6" izz="3.545e-5"/>
            </inertial>
            <visual name="">
                <origin xyz="0.0 ${0.04*reflect} 0.0" rpy="${1.57*reflect} 1.57 0.0"/>
                <geometry>
                    <mesh filename="file://$(find bipedal_description)/meshes/forearm.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0.0 ${0.04*reflect} 0.0" rpy="${1.57*reflect} 1.57 0.0"/>
                <geometry>
                    <cylinder length="0.09" radius="0.035"/>
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}_leg_pitch" type="revolute">
            <origin xyz="0.0 ${-0.19*reflect} 0.0" rpy="0.0 0.0 0.0"/>
            <parent link="${parent}"/>
            <child link="${prefix}_leg"/>
            <axis xyz="0 1 0"/>
            <limit lower="-2.618" upper="1.57" effort="10." velocity="0.0"/>
            <dynamics damping="${damping}" friction="${friction}"/>
        </joint>


        <xacro:leg_control
                name="${prefix}"
                serial_port="${serial_port}"
                mx_ids="${mx_ids}"
                offsets="${offsets}"
                is_direct="${is_direct}"
                reductions="${reductions}"
        />

    </xacro:macro>
</robot>
